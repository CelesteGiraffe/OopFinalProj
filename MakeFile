# Source files
SRCS = $(wildcard *.cpp)
OBJS = $(SRCS:.cpp=.o)

# Executable name
TARGET = Dungeon

# Default target
all: print_debug $(TARGET)

# Debug target to print SRCS
print_debug:
	@echo $(SRCS)

# Compiler and flags
CXX = c++
CXXFLAGS = -std=c++17

# Link the executable
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $^

# Compile source files to object files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $<

# Clean up build files
clean:
	rm -f *.o $(TARGET)

.PHONY: all clean